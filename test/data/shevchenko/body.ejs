<section>
<article>

  <% if (is_post(file)) { %>
  <nav class="screen prevnext">
    <% if (next) { %><a href="<%= next.link %>" title="<%= next.subject %>">&laquo;</a><% } else { %><span></span><% } %>
    <% if (prev) { %><a href="<%= prev.link %>" title="<%= prev.subject %>">&raquo;</a><% } else { %><span></span><% } %>
  </nav>
  <% } %>

  <h2><%= subject %></h2>

  <p>Latest update: <%= new Date(mtime).toLocaleString() %></p>

  <%- body %>

  <br>Tags: <%- metatags_inline(file, 'tags', tags) %>
  <br>Authors: <%- metatags_inline(file, 'authors', authors) %>

</article>
</section>
