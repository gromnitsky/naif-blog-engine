<section>
<article data-author="<%= subject %>">

  <h2><%= subject %></h2>

  <div id="nbe__authors__graph"></div>
  <div id="nbe__authors__graph__tooltip"
       style="position: absolute; display: none;"></div>

  <p>Total: <%= group_by_author[subject].length %></p>

  <table class="nbe__metatable">
    <thead>
      <th style="width: 20%">Air Date</th>
      <th>Subject</th>
      <th style="width: 30%">Tags</th></thead>
    <tbody>
      <% for (let val of group_by_author[subject]) { %>
      <tr>

	<td><%= birthtime_ymd(val.file) %></td>
	<td><a href="<%= link(val.file, file) %>"><%= val.subject %></a></td>
	<td><%- metatags_inline(file, 'tags', val.tags) %></td>

      </tr>
      <% } %>
    </tbody>
  </table>

</article>
</section>
