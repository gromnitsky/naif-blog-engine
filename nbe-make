#!/usr/bin/make -f

src := .
out := _out
web := $(out)/web

mk := $(dir $(realpath $(lastword $(MAKEFILE_LIST))))
all.src := $(filter-out $(src)/config.json $(wildcard $(src)/*.mk) \
	$(wildcard $(src)/*.ejs) $(src)/.gitignore, \
	$(shell find $(src) ! -path "*/.git/*" ! -path '$(src)/$(out)/*' -type f))
all.dest := $(patsubst $(src)/%, $(web)/%, $(all.src))
html.dest := $(patsubst %.md, %.html, $(filter %.md, $(all.dest)))
static.dest := $(filter-out %.md, $(all.dest))

.PHONY: compile
compile:
compile := $(html.dest) $(static.dest)

$(web)/%.html: $(src)/%.md $(out)/index.json $(src)/config.json $(src)/header.ejs $(src)/body.ejs $(src)/footer.ejs
	$(mkdir)
	$(mk)/nbe-html $^ > $@

$(out)/index.json: $(filter %.md, $(all.src))
	$(mkdir)
	$(mk)/nbe-index $^ > $@

$(static.dest): $(web)/%: $(src)/%
	$(mkdir)
	$(copy)

$(out)/metatags.mk: $(out)/index.json
	$(mk)/nbe-metatags $< $(web) > $@

include $(out)/metatags.mk

$(web)/a/%.html: $(out)/index.json $(src)/config.json $(src)/header.ejs $(src)/body.author.ejs $(src)/footer.ejs
	$(mkdir)
	$(mk)/nbe-html author/$* $^ > $@

$(web)/t/%.html: $(out)/index.json $(src)/config.json $(src)/header.ejs $(src)/body.tag.ejs $(src)/footer.ejs
	$(mkdir)
	$(mk)/nbe-html tag/$* $^ > $@

$(web)/index.html: $(out)/index.json $(src)/config.json $(src)/header.ejs $(src)/body.home.ejs $(src)/footer.ejs
	$(mkdir)
	$(mk)/nbe-html home $^ > $@

compile += $(web)/index.html

$(web)/rss.xml: $(out)/index.json $(src)/config.json
	$(mkdir)
	$(mk)/nbe-rss $^ > $@

compile += $(web)/rss.xml

compile: $(compile)

copy = cp $< $@
mkdir = @mkdir -p $(dir $@)
shellquote = '$(subst ','\'',$(1))'
#'

.DELETE_ON_ERROR:



# print a diff between should-be files & a real situation
.PHONY: check
check: compile
	@echo "$(strip $(compile))" | tr ' ' \\n | sort > should
	@find $(web) -type f | sort > real
	@diff -u should real; c=$$?; rm should real; exit $$c

new.date := $(shell date +%Y/%m/%d)
new.post := $(src)/$(shell mktemp -u $(new.date)/XXXXXX.md)
new.author := $(shell json < $(src)/config.json rss.author)
.PHONY: new
new:
	@mkdir -p $(dir $(new.post))
	@printf -- '---\nsubject: A New Post\nauthors: %s\ntags: \n---\n\nHi' \
		$(call shellquote,$(new.author)) > $(new.post)
	@echo TEST: nbe-make $(patsubst %.md, %.html, $(patsubst $(src)/%, $(web)/%, $(new.post)))
	$$EDITOR $(new.post) &

define help :=
if the build fails, rm $(out)/index.json, then try again

compile		(default)
new		create a new blog post
check		check for superfluous files in $(web)

$(web)/yyyy/mm/dd/post.html	compile only 1 particular post
-f ~/lib/debug.mk pp-compile	print all file targets
endef

.PHONY: help
help:; $(info $(help))@:

-include $(src)/local.mk
