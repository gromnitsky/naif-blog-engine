#!/usr/bin/make -f

src := .
out := _out

mk := $(dir $(realpath $(lastword $(MAKEFILE_LIST))))
templates.src := $(src)/header.ejs $(src)/body.ejs $(src)/footer.ejs
all.src := $(filter-out $(src)/config.json $(templates.src), \
	$(shell find $(src) ! -path '$(src)/$(out)/*' -type f))
all.dest := $(patsubst $(src)/%, $(out)/%, $(all.src))
html.dest := $(patsubst %.md, %.html, $(filter %.md, $(all.dest)))
static.dest := $(filter-out %.md, $(all.dest))

.PHONY: compile
compile: $(html.dest) $(static.dest)

$(out)/%.html: $(src)/%.md $(out)/index.json $(src)/config.json $(templates.src)
	$(mkdir)
	$(mk)/nbe-md2html $^ > $@

$(out)/index.json: $(filter %.md, $(all.src))
	$(mkdir)
	$(mk)/nbe-index $^ > $@

$(static.dest): $(out)/%: $(src)/%
	$(mkdir)
	$(copy)

copy = cp $< $@
mkdir = @mkdir -p $(dir $@)

.DELETE_ON_ERROR:
